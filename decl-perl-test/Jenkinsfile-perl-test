pipeline
{
    agent any
    stages 
    {
        stage('First Stage')
        { 
            steps
            {
            
                sh '''#!/usr/bin/perl -v'''
                
            script {
                
                sh """#!/usr/bin/perl
                      use strict;
                      use warnings;

                      print "Hello, World!\n";"""

		      sh "pwd"

            }

		



            }
        }

	stage ('Second stage')
	{
		steps {
		script {
            dir ("decl-perl-test/") {
    sh "/usr/bin/perl -w declperltest.pl"
}
    } 

    }
}
}
}
